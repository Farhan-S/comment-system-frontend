  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:20-alpine",
    "RUN mkdir -p /usr/src/app",
    "WORKDIR /usr/src/app",
    "COPY ./package.json /usr/src/app/",
    "RUN npm install && npm cache clean --force",
    "COPY ./ /usr/src/app",
    "RUN npm run build",
    "ENV NODE_ENV production",
    "RUN npm install -g serve",
    "EXPOSE 5173",
    "CMD [\"serve\", \"-s\", \"dist\", \"-l\", \"5173\"]"
  ]
